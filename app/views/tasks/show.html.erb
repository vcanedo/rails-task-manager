<h1><%= @task.title %></h1>

<div class="card">
  <p><%= @task.details %></p>

  <% if @task.completed %>
    <i class="fa-solid fa-square-check"></i>
    <% else %>
    <i class="fa-regular fa-square-check"></i>
  <% end %>
</div>
<%= link_to 'Edit task', edit_task_path(@task) %>

<%= link_to 'Back to list', tasks_path %>
